extends ../layout

block header
    include ../includes/header

block content
    .columns
        .col-8
            .post-head
                .meta: small Translated: #{moment(article.publish_date).format('MMMM Do YYYY')}
                h1.headline #{article.title}

            article

                if article.article
                    .post-text
                        if article.article.movies && article.article.movies.length
                            .post-video
                                iframe(width='640', height='360', src='#{article.article.movies[Math.floor(Math.random()*article.article.movies.length)]}', frameborder='0', allowfullscreen='')

                        else if article.article.featured_image
                            .post-image
                                img(src="#{article.article.featured_image}", style="width:100%;")

                        else if article.article.images && article.article.images.length
                            .post-image
                                img(src="#{article.article.images[Math.floor(Math.random()*article.article.images.length)]}", style="width:100%;")

                        p #{article.content}
                        a(href="#{article.article.url}", target="_blank").button.button-cyan.button-icon.button-fluid
                            label Read original post
                            .ss-icon.ss-right

                else
                    .post-text
                        p #{article.text}
                    a(href="#{article.article.url}", target="_blank").button.button-cyan.button-icon.button-fluid
                        label Read original post
                        .ss-icon.ss-right
                .fin                    
        .col-4: include ../includes/rightrail