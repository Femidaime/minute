extends ../layout

block header
    include ../includes/header

block content
    .columns
        .col-8
            .post-head
                .meta Translated: June 21 2014
                h1.headline #{fakeArticle.title}

            article
                .post-text
                    .post-img
                        img(src="#{fakeArticle.top_image}")
                    //- video content here                    
                        if article.has_video
                            .post-video
                                iframe(width='640', height='360', src='//www.youtube.com/embed/mosHFxtoVWI?rel=0&showinfo=0', frameborder='0', allowfullscreen='')
                    p #{fakeArticle.text}
                .fin
                    
        .col-4: include ../includes/rightrail
    .pages
        .columns
            .col-3
                .text-left: a.button.button-fluid.button-black(href="#")
                    .ss-navigateleft
                    label Previous
            .col-3
                .text-right: a.button.button-fluid.button-black(href="#")
                    .ss-navigateright 
                    label Next