extends ../layout

block header
    include ../includes/header

block content
    .columns
        .col-7
            .post-head
                .meta
                    small Translated: June 21 2014
                h2.headline          
                    | #{fakeArticle.title}

            article
                .post-text
                    .post-img
                        img(src="#{fakeArticle.top_image}")
                    //- video content here                    
                        if article.has_video
                            .post-video
                                iframe(width='640', height='360', src='//www.youtube.com/embed/mosHFxtoVWI?rel=0&showinfo=0', frameborder='0', allowfullscreen='')
                    p
                        | #{fakeArticle.text}
                .fin
                    
        .col-3
            include ../includes/rightrail
